  <!--card-->
  <div class="container">
      <h2 class="text-center my-3" style="color: #EE0E0E;"><b>Projects</b></h2>
      
      <!-- Search form -->
      <div class="active-pink-3 active-pink-4 mb-4">
        <input class="form-control" id="anythingSearch" type="text" placeholder="Type something to search" aria-label="Search">
      </div>

      <div class="text-center text-lg-right">
        <a href="/createProject" class="btn btn-danger btn-lg">
          <span class="glyphicon glyphicon-plus-sign"></span> Create New Project
        </a>
      </div>
    

    <div class="row mt-4 mainDiv">


      <% projects.forEach((project) => { %>

        <div class="card col-xl-4 col-lg-6 col-sm-9 col-xs-12 mb-4 px-0 shadow-lg mx-auto">
          <div class="card-header text-white text-capitalize pt-5 text-wrap"
            style="background: linear-gradient(to bottom right,#05a95b , #87e052 ); font-weight: 650; font-size: 25px;">
            <%= project.title %> </div>
  
          <img src="<%= project.image.path %>" class="card-img-top" style="height: 250px;" alt="project image...">
          <div class="card-body">
            <p class="card-text" style="font-weight: 500;"><%= project.description %></p>
            <br>
            <p class="text-center">
              <% for(let i=0 ; i<project.tags.length ; i++) { %>
                <% if(i%4 == 0) { %>
                  <span class="badge bg-danger text-white p-2 mb-1" style="font-weight: 500;font-size: 15px;"><%= project.tags[i] %></span>
                <% } else if(i%4 == 1) { %>
                  <span class="badge bg-secondary text-white p-2 mb-1" style="font-weight: 500;font-size: 15px;"><%= project.tags[i] %></span>
                <% } else if (i%4 == 2) { %>
                  <span class="badge bg-warning text-white p-2 mb-1" style="font-weight: 500;font-size: 15px;"><%= project.tags[i] %></span>
                <% } else { %>
                  <span class="badge bg-info text-white p-2 mb-1" style="font-weight: 500;font-size: 15px;"><%= project.tags[i] %></span>
                <% } %>
              <% } %>
              
            </p>
            <br>
          </div>
          <div class="card-footer bg-white">
            <h5 class="card-title mb-1"><b>Mentored by</b></h5>
            <h5 style="color: blue;"><%= project.mentor.name %></h5>
            <h5 style="color: blue;">( <%= project.mentor.email %> )</h5>
            <a href="<%= project.link %>" class="btn btn-success col-12" type="button" target="_blank"><b>View Project</b></a>
          </div>
        </div>

      <% }); %>

    </div>
  </div>





  <!--footer-->

