    <div class="container">
        <h3><b>Create project</b></h3>

        <form class="border border-secondary p-5 pt-0" action="/createProject" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Project Title *</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Enter Project Title"
                    required>
            </div>

            <div class="form-group">
                <label for="name">Mentor's Name *</label>
                <input type="text" class="form-control" id="name" name="mentor[name]" placeholder="Enter Mentor's Name"
                    required>
            </div>
            <div class="form-group">
                <label for="email">Mentor's Email *</label>
                <input type="email" class="form-control" id="emial" name="mentor[email]"
                    placeholder="Enter Mentor's Email(you@example.com)" required>
            </div>

            <div class="form-group">
                <label for="description">Project Description *</label>
                <textarea class="form-control" id="description" name="description" rows="3"
                    placeholder=" About Your Project" required></textarea>
            </div>

            <div class="form-group">
                <label for="image">Project Image</label>
                <input type="file" class="form-control-file" id="image" name="image">
            </div>

            <div class="input-group mb-3">
                <div class="input-group-append">
                    <input type="text" class="form-control" id="tag-input"
                        placeholder="Add Tag Ex. JavaScript">
                    <button class="btn btn-secondary" type="button" id="add-tag"> <b>+</b> Add </button>
                </div>
                <div class="mt-3" id="all-tag"> </div>
            </div>

            <div class="form-group">
                <label for="link">Project Link *</label>
                <input type="text" class="form-control" id="link" name="link" placeholder="Project Link" required>
            </div>

            <a href="/projects" type="button" class="btn btn-primary "> Cancel </a>
            <button type="submit" class="btn btn-primary "> Create</a>

        </form>

